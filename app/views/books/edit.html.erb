
<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>Editing Book</h2>

      <% if @bookshow.errors.any? %>
        <h3><%= @bookshow.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @bookshow.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @bookshow ,url: book_path(@bookshow.id),method: :patch do |f| %>
          <div class="form-group">
          <label for="title">Title</label>
            <%= f.text_field :title ,class: "input form-control", id: "title" %>
          </div>

          <div class="form-group">
          <label for="opinion">Opinion</label>
            <%= f.text_area :body ,class: "textarea form-control opinion", id: "opinion" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update Book" ,class: "btn btn-sm btn-success bg-success" %>
          </div>

        <% end %>

        <%= link_to "Show" ,book_path(@bookshow.id) %> | <%= link_to "Back",books_path %>
    </div>
  </div>
</div>