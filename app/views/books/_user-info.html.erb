
<div class="col-3">

  <% if book.errors.any? %>
  <h3><%= book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table table-hover">
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

  <div class="row">
    <%= link_to edit_user_path(user.id) ,class: "btn btn-block btn-outline-secondary" do %> <i class="fas fa-user-cog"></i><% end %>
  </div>

  <h2 class="mt-3">New book</h2>



    <%= form_with model: book do |f| %>
      <div class="form-group">
        <label for="title">Title</label>
        <%= f.text_field :title,class: "input form-control title", id: "title" %>
      </div>

      <div class="form-group">
        <label for="opinion">Opinion</label>
        <%= f.text_area :body,class: "form-control opinion textarea", id: "opinion" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book" ,class: "btn btn-sm btn-success bg-success" %>
      </div>

    <% end %>
</div>
