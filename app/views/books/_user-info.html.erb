<div class="row">
    <div class="col-3">

      <h2>User info</h2>

      <%= image_tag user.get_profile_image(100,100) %>

      <table class="table table-hover">
        <tr></tr>
        <tr>
        <th>name</th>
        <th><%= user.name %></th>
        </tr>

        <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
        </tr>
      </table>

      <h2 class="mt-3">New book</h2>

        <%= form_with model: book do |f| %>
          <div class"text-group mb-16">
          <label for="title">Title
          <imput type="text" id="title"><%= f.text_field :title %></imput>
          </label>
          </div>

          <div class"text-group">
          <label for="opinion">Opinion
          <imput type="text" id="opinion"><%= f.text_area :body %></imput>
          </label>
          </div>

          <%= f.submit "Create Book" ,class: "btn btn-sm btn-success bg-success" %>

        <% end %>
    </div>
  </div>