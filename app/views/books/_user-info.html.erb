
<div class="col-3">

  <h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table table-hover">
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= user.name %></th>
    </tr>

    <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
    </tr>
  </table>

  <h2 class="mt-3">New book</h2>

    <%= form_with model: book do |f| %>
      <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control title" id="title" <%= f.text_field :title %>
      </div>

      <div class="form-group">
      <label for="opinion">Opinion</label>
      <textarea class="form-control opinion" id="opinion" <%= f.text_area :body %>
      </div>

      <%= f.submit "Create Book" ,class: "btn btn-sm btn-success bg-success" %>

    <% end %>
</div>
