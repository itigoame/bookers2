<div class="container px-5">
  
  <%= render "user-info",book: @book %>
  
  <div class="row">
   <div class="col-8 offset-md-1">
    <h2>Books</h2>
      <div>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= image_tag @books.user.get_profile_image(80,80) %><%= @books.user.name %></td>
              <td>
                <%= link_to book_path(@books.id) do %>
                  <%= @books.title  %>
                <% end %>
              </td>

              <td><%= @books.body %></td>
            </tr>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>
