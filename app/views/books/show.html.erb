
<div class="container px-5">

  <div class="row">
  <%= render "user-info",book: @book,user: @user %>
   <div class="col-8 offset-md-1">
    <h2>Book detail</h2>
      <div>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <%=link_to user_path(@user.id) do %>
                  <%= image_tag @bookshow.user.get_profile_image(80,80) %><br>
                  <%= @bookshow.user.name %>
                <% end %>
              </td>

              <td>
                <%= link_to book_path(@bookshow) do %>
                  <%= @bookshow.title  %>
                <% end %>
              </td>

              <td><%= @bookshow.body %></td>

              <% if @user == current_user %>
              <td><%= link_to "Edit" ,edit_book_path(@bookshow.id),class: "btn btn-sm btn-success bg-success" %></td>

              <td><%= link_to "Destroy" ,book_path(@bookshow.id),method: :delete,"data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger bg-danger" %></td>
              <% end %>
            </tr>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>
