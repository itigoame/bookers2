<p id="notice"></p>
<div class="container px-5">

  <div class="row">
  <%= render "books/user-info", book: @book,user: @user %>

   <div class="col-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover">

        <% @books.each do |book| %>
        <tbody>
        <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </tr>
        </tbody>
        <% end %>

      </table>
    </div>
  </div>
</div>