
<div class="container px-5">

  <div class="row">

    <%= render "books/user-info", book: @book,user: @user %>

    <div class="col-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

          <tbody>
            <% @bookshow.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(80,80) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>

      </table>

    </div>
  </div>
</div>

