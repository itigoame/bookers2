
<div class="container px-5">

  <div class="row">

    <%= render "books/user-info", book: @book,user: @user %>

   <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table table-hover">

        <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>

        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show",user_path(user.id) %></td>
            </tr>
          </tbody>
        <% end %>

      </table>
    </div>
  </div>
</div>